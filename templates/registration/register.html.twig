{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="row">
        <div class="col-md-8 p-5">
            <h1>Fazer Cadastro</h1>

            {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.username, {label: 'Nome de Usu√°rio'}) }}
                {{ form_row(registrationForm.cpf, {
                    label: 'CPF'
                }) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Senha'
                }) }}
                {{ form_row(registrationForm.confirmedPassword, {
                    label: 'Confirmar Senha'
                }) }}
                <div class="text-danger" id="password-alert"></div>
                {{ form_row(registrationForm.user_type, {label: 'Sou um Profissional Freelancer.'}) }}
                {{ form_row(registrationForm.type) }}
                {{ form_row(registrationForm.agreeTerms, {label: 'Li e Concordo com os termos de uso'}) }}

                <button type="submit" class="btn btn-primary">Enviar</button>
            {{ form_end(registrationForm) }}
        </div>
        <script src="{{asset('js/validators/registration-form.js')}}"></script>
    </div>
{% endblock %}
